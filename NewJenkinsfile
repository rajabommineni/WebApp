pipeline { 
    agent any  
    tools { 
        maven 'maven' 
        jdk 'jdk' 
   }
    stages { 
       stage ('Artifactory configuration') {
            steps {
                rtServer (
                    id: "artifactory",
		    url: "https://rajadevops.jfrog.io/artifactory",
		    credentialsId: 'jfrog' 
                )
		rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId: "artifactory",
                    releaseRepo: "libs-release-local",
                    snapshotRepo: "libs-snapshot-local"
                )
           }
        }
    }
}
