pipeline { 
    agent any  
    tools { 
        maven 'maven' 
        jdk 'jdk' 
   }
    stages { 
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
        stage ('Static Code Analysis') {
	   steps {
	        sh "mvn sonar:sonar -Dsonar.host.url=${env.SONARQUBE_HOST}"
       	  }  
        }
        stage ('Build') { 
            steps { 
               echo 'This is a minimal pipeline.' 
               sh 'mvn clean package'               
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
}
